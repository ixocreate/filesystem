{
    "name": "ixocreate/filesystem-package",
    "description": "IXOCREATE filesystem integration",
    "license": "MIT",
    "type": "library",
    "authors": [
        {
            "name": "IXOCREATE"
        }
    ],
    "minimum-stability": "dev",
    "prefer-stable": true,
    "require": {
        "php": "^7.1",
        "league/flysystem": "^1.0",
        "ixocreate/contract": "=1.0.0-alpha2"
    },
    "require-dev": {
        "phpunit/phpunit": "^6.0.6",
        "php-coveralls/php-coveralls": "^2.0",
        "ixocreate/coding-standard": "^1.0"
    },
    "autoload": {
        "psr-4": {
            "Ixocreate\\Filesystem\\": "src/"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "IxocreateMisc\\Filesystem\\": "tests/misc/",
            "IxocreateTest\\Filesystem\\": "tests/src/"
        }
    },
    "scripts": {
        "fix-cs": "vendor/friendsofphp/php-cs-fixer/php-cs-fixer fix --config vendor/ixocreate/coding-standard/.php_cs"
    }
}
